<?xml version="1.0" encoding="UTF-8"?>

<included>
    <conversionRule conversionWord="mdcIfPresent" converterClass="seg.work.carog.server.common.config.logging.ConditionalMDCParamConverter" />

    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS, ${logback.timezone:-Asia/Seoul}} %highlight([%-5level]) [%thread] %mdcIfPresent{traceId} %mdcIfPresent{spanId} %cyan(%logger{200}) %yellow(%method:%line) - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>${LOG_PATTERN}</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
</included>